	shortjournal = {{PLOS} Computational Biology},
	author = {Tizzoni, Michele and Bajardi, Paolo and Decuyper, Adeline and King, Guillaume Kon Kam and Schneider, Christian M. and Blondel, Vincent and Smoreda, Zbigniew and González, Marta C. and Colizza, Vittoria},
	urldate = {2019-06-18},
