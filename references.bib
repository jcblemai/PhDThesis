	shortjournal = {The Lancet Public Health},
	author = {Du, Zhanwei and Pandey, Abhishek and Bai, Yuan and Fitzpatrick, Meagan C. and Chinazzi, Matteo and Piontti, Ana Pastore y and Lachmann, Michael and Vespignani, Alessandro and Cowling, Benjamin J. and Galvani, Alison P. and Meyers, Lauren Ancel},
