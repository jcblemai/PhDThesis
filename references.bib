	author = {Sugimoto, Jonathan D. and Koepke, Amanda A. and Kenah, Eben E. and Halloran, M. Elizabeth and Chowdhury, Fahima and Khan, Ashraful I. and {LaRocque}, Regina C. and Yang, Yang and Ryan, Edward T. and Qadri, Firdausi and Calderwood, Stephen B. and Harris, Jason B. and Jr, Ira M. Longini},
