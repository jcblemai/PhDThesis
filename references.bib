	keywords = {Cholera, Cholera vaccines, Dose prediction methods, Guinea-Bissau, Immunity, Simulation and modeling, Vaccination and immunization, Vaccines},
}

@article{Tuite:CholeraEpidemicHaiti:2011,
	title = {Cholera epidemic in Haiti, 2010: using a transmission model to explain spatial spread of disease and identify optimal control interventions},
