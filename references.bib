	number = {772},
	journaltitle = {Proc. R. Soc. Lond. A},
	shortjournal = {Proc. R. Soc. Lond. A},
	author = {Kermack, William Ogilvy and {McKendrick}, A. G.},
	urldate = {2018-06-13},
	date = {1927-08-01},
	langid = {english},
}

